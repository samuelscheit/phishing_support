FROM --platform=linux/amd64 oven/bun:1.3.5-debian
WORKDIR /app

RUN apt-get update \
  && apt-get install -y --no-install-recommends ca-certificates wget gnupg

RUN set -euxo pipefail; \
  wget -qO- https://dl.google.com/linux/linux_signing_key.pub | gpg --dearmor -o /usr/share/keyrings/google-linux-signing-keyring.gpg; \
  echo "deb [arch=amd64 signed-by=/usr/share/keyrings/google-linux-signing-keyring.gpg] http://dl.google.com/linux/chrome/deb/ stable main" > /etc/apt/sources.list.d/google-chrome.list; \
  apt-get update; \
  apt-get install -y --no-install-recommends ca-certificates xvfb xauth fonts-liberation libasound2 libnss3 libxss1 libgtk-3-0 google-chrome-stable; \
  rm -rf /var/lib/apt/lists/*

COPY package.json bun.lock ./
RUN bun install --frozen-lockfile

ENV NODE_ENV=production
ENV DOCKER=true
ENV CHROME_PATH=/usr/bin/google-chrome-stable

COPY . .

# Run the script under Xvfb so Chrome can run headful in containers.
CMD ["sh", "-lc", "xvfb-run -a --server-args='-screen 0 1280x1024x24 -nolisten tcp' bun src/lib/utils.test.ts"]
